<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    crossorigin="anonymous" />

  <style>
    *{box-sizing:border-box;}
    body{
      margin:0;
      font-family:'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      line-height:1.6;
      background:#fff;
    }
    img{max-width:100%;display:block;height:auto;}

    /* HEADER */
    #header{
      position:fixed;
      top:0;
      left:0;
      width:100%;
      background:#fff;
      z-index:1000;
      transition:box-shadow .3s ease;
    }
    #header.scrolled{
      box-shadow:0 4px 12px rgba(0,0,0,.12);
    }

    .container1{
      max-width:1100px;
      margin:0 auto;
      padding:10px 16px;
      display:flex;
      align-items:center;
      justify-content:space-between;
    }

    .log-img{
      width:180px;
      height:auto;
    }

    .nav-desktop a{
      margin-left:18px;
      text-decoration:none;
      color:#222;
      font-weight:600;
    }

    .menu-btn{
      font-size:26px;
      border:none;
      background:none;
      cursor:pointer;
    }

    /* MOBILE MENU */
    .mobile-menu{
      position:fixed;
      inset:0;
      background:#fff;
      z-index:1100;
      padding:60px 20px;
      transform:translateX(-100%);
      transition:transform .3s ease;
    }
    .mobile-menu.active{
      transform:translateX(0);
    }

    .mobile-menu nav a{
      display:block;
      margin-bottom:20px;
      font-size:18px;
      text-decoration:none;
      color:#222;
    }

    .close-btn{
      position:absolute;
      top:20px;
      right:20px;
      font-size:28px;
      border:none;
      background:none;
      cursor:pointer;
    }

    /* RESPONSIVE */
    @media(min-width:768px){
      .menu-btn,.mobile-menu{display:none;}
    }
    @media(max-width:768px){
      .nav-desktop{display:none;}
      .log-img{width:140px;}
    }

    /* PAGE CONTENT */
    .page-content{
      position:relative;
      z-index:1;
    }
  </style>
</head>

<body>

<!-- HEADER -->
<header id="header">
  <div class="container1">
    <img src="/image/logo7.png" class="log-img" alt="Logo">

    <nav class="nav-desktop">
      <a href="/"><i class="fa-solid fa-house"></i> HOME</a>
      <a href="/product"><i class="fa-solid fa-cube"></i> PRODUCTS</a>
      <a href="/about"><i class="fa-solid fa-address-card"></i> ABOUT</a>
      <a href="/contact"><i class="fa-solid fa-phone"></i> CONTACT</a>
    </nav>

    <button class="menu-btn" id="menuBtn">☰</button>
  </div>
</header>

<!-- MOBILE MENU -->
<div class="mobile-menu" id="mobileMenu">
  <button class="close-btn" id="closeBtn">✕</button>
  <nav>
    <a href="/">HOME</a>
    <a href="/product">PRODUCTS</a>
    <a href="/about">ABOUT</a>
    <a href="/contact">CONTACT</a>
  </nav>
</div>

<!-- PAGE CONTENT (SLIDER / FLASH / ALL CONTENT) -->
<div class="page-content">
  <!-- yahin slider, flash message, content aayega -->
</div>

<script>
  /* MOBILE MENU */
  const menuBtn = document.getElementById("menuBtn");
  const closeBtn = document.getElementById("closeBtn");
  const mobileMenu = document.getElementById("mobileMenu");

  menuBtn.onclick = () => mobileMenu.classList.add("active");
  closeBtn.onclick = () => mobileMenu.classList.remove("active");

  /* HEADER SHADOW */
  const header = document.getElementById("header");
  window.addEventListener("scroll", () => {
    header.classList.toggle("scrolled", window.scrollY > 40);
  });

  /* ⭐ AUTO HEADER HEIGHT FIX (MAIN FIX) */
  window.addEventListener("load", () => {
    document.body.style.paddingTop = header.offsetHeight + "px";
  });
</script>

</body>
</html>
