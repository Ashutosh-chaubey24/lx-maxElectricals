<% layout('./boilerplate/boilerplate2.ejs') %>
  <style>
    :root{
      --bg:#ffffff;
      --card:#fbfdff;
      --accent:#0b78d1;
      --accent-2:#1aa26a;
      --muted:#6b6b6b;
      --max-width:1100px;
      --radius:14px;
      font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      color:#222;
    }
    *{box-sizing:border-box}
    body{margin:0;background:var(--bg);line-height:1.6}

    /* Make all images responsive by default */
    img{max-width:100%;height:auto;display:block}

    header{padding:18px 24px;background:linear-gradient(90deg, rgba(11,120,209,0.06), rgba(26,162,106,0.02));border-bottom:1px solid rgba(11,120,209,0.06)}
    .container{max-width:var(--max-width);margin:0 auto;padding:24px}

    /* top nav */
    .nav{display:flex;align-items:center;justify-content:space-between}
    .brand{display:flex;align-items:center;gap:12px}
    .logo{width:46px;height:46px;background:var(--accent);border-radius:8px;display:inline-grid;place-items:center;color:#fff;font-weight:800}
    nav a{margin-left:18px;text-decoration:none;color:var(--muted);font-weight:600}

    /* hero */
    .hero-image{display:grid;grid-template-columns:1fr 1fr;gap:28px;align-items:center;padding:36px 0}
    .hero .text h1{font-size:34px;margin:0 0 10px}
    .hero .text p{color:var(--muted);font-size:16px;margin:0 0 18px}
    /* .hero .cta{} */
    .hero .sub{color:var(--muted);font-size:14px;margin-top:10px}
    .hero .visual img{width:100%;max-width:520px;border-radius:12px;box-shadow:0 10px 30px rgba(10,20,40,0.06)}

    /* cards */
    .grid-3{display:flex;gap:18px;margin:30px 0}
    .card{flex:1;background:var(--card);padding:18px;border-radius:12px;box-shadow:0 6px 18px rgba(10,20,40,0.04)}
    .card h3{margin:0 0 6px}
    .card p{color:var(--muted);margin:0;font-size:15px}

    /* story */
    .story{display:grid;grid-template-columns:1fr 1fr;gap:26px;align-items:center;margin:36px 0}
    .story img{width:100%;border-radius:12px}

    /* values */
    .values{display:flex;gap:14px;flex-wrap:wrap}
    .value{flex:1;min-width:200px;background:linear-gradient(180deg,rgba(11,120,209,0.06),transparent);padding:14px;border-radius:10px}
    .value h4{margin:0 0 6px}

    /* team */
    .team{margin:36px 0}
    .people{display:flex;gap:16px;flex-wrap:wrap}
    .person{width:180px;background:var(--card);padding:12px;border-radius:10px;text-align:center}
    .avatar{width:84px;height:84px;border-radius:50%;background:#eaf6ff;margin:0 auto 12px;display:inline-grid;place-items:center;font-weight:700;color:var(--accent)}

    /* footer contact */
    .contact-cta{background:linear-gradient(90deg,var(--accent),var(--accent-2));color:#fff;padding:24px;border-radius:12px;display:flex;align-items:center;justify-content:space-between;margin:36px 0}
    .contact-cta a{background:#fff;color:var(--accent);padding:10px 16px;border-radius:10px;text-decoration:none;font-weight:700}

    footer{padding:22px 0;color:var(--muted);font-size:14px}

    @media (max-width:900px){
      .hero-image,.story{grid-template-columns:1fr}
      .grid-3{flex-direction:column}
      .nav{flex-direction:column;align-items:flex-start;gap:10px}
      .contact-cta{flex-direction:column;gap:12px;text-align:center}
      .people{justify-content:center}
      .person{width:140px}
      .logo{width:40px;height:40px}
    }

    /* meet team */
    .team {
  padding: 60px 20px;
  background: #f9fafb;
  text-align: center;
}

.team h2 {
  font-size: 32px;
  margin-bottom: 40px;
  font-weight: 600;
}

.people {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 24px;
  max-width: 1000px;
  margin: 0 auto;
}

.person {
  background: #ffffff;
  padding: 24px;
  border-radius: 14px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.person:hover {
  transform: translateY(-6px);
  box-shadow: 0 14px 30px rgba(0, 0, 0, 0.1);
}

.person h3 {
  font-size: 18px;
  margin-bottom: 6px;
  font-weight: 600;
}

.person p {
  font-size: 14px;
  color: #6b7280;
}
/* <!-- Quick features --> */
/* Quick Features Section */
.lx-features {
  display: flex;
  gap: 18px;
  margin: 30px 0;
  flex-wrap: wrap; /* ensures responsive stacking on smaller screens */
}

.lx-feature-card {
  flex: 1;
  background: var(--card, #fbfdff);
  padding: 18px;
  border-radius: 12px;
  box-shadow: 0 6px 18px rgba(10, 20, 40, 0.04);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.lx-feature-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 25px rgba(10, 20, 40, 0.08);
}

.lx-feature-card h3 {
  margin: 0 0 6px;
  font-size: 18px;
  font-weight: 600;
  color: #222;
}

.lx-feature-card p {
  color: var(--muted, #6b6b6b);
  margin: 0;
  font-size: 15px;
  line-height: 1.5;
}

/* Responsive for small screens */
@media (max-width: 900px) {
  .lx-features {
    flex-direction: column;
  }
}

  </style>
