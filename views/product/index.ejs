 <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mapElement = document.getElementById("map");

    // Load Leaflet only if map exists
    if (mapElement) {
      const script = document.createElement("script");
      script.src = "https://unpkg.com/leaflet/dist/leaflet.js";
      script.defer = true;

      script.onload = function () {
        // Map init AFTER leaflet loads
        const lat = 28.448091;
        const lng = 76.9916983;

        const map = L.map("map").setView([lat, lng], 16);

        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
          maxZoom: 20,
        }).addTo(map);

        L.marker([lat, lng])
          .addTo(map)
          .bindPopup("Kadipur Industrial Area - Gali No. 8")
          .openPopup();

        map.on("click", function () {
          const placeName =
            "Gali No. 8, Kadipur Industrial Area, Sector 37C, Gurugram, Haryana 122006";

          const googleURL = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(
            placeName
          )}`;

          window.open(googleURL, "_blank");
        });
      };

      document.body.appendChild(script);
    }
  });
  (() => {
  'use strict'
  const forms = document.querySelectorAll('.needs-validation')

  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }
      form.classList.add('was-validated')
    }, false)
  })
})()
</script>

