<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Merriweather:wght@600&display=swap');
  :root{
    --bg: #f3f7fb;
    --card: #ffffff;
    --accent: #083475;
    --accent2: #ffbf47;
    --muted: #6b7280;
    --radius: 14px;
  }

  *{box-sizing:border-box;}

  body{
    margin:0;
    font-family: Inter, sans-serif;
    background: var(--bg);
    color:#0a1320;
  }

  .headerBanner{
    padding:40px 10px;
    text-align:center;
    background:linear-gradient(120deg,#ddecff,#ffffff);
     margin-top:20px;
  }
  .headerBanner h1{
    font-size:36px;
    margin:0;
    color:var(--accent);
    font-family:Merriweather, serif;
  }
  .headerBanner p{
    color:var(--muted);
    font-size:16px;
    margin-top:10px;
  }

  .container{
    max-width:1200px;
    margin:0 auto;
    padding:40px 20px;
    display:grid;
    grid-template-columns:1fr 1fr;
    gap:40px;
  }

  /* Contact Form */
  .contactForm{
    background:var(--card);
    padding:30px;
    border-radius:var(--radius);
    box-shadow:0 10px 35px rgba(0,0,0,0.06);
  }

  .contactForm h2{
    font-size:26px;
    font-family:Merriweather, serif;
    margin-bottom:20px;
    color:var(--accent);
  }

  .form-group{
    margin-bottom:16px;
    display:flex;
    flex-direction:column;
    gap:6px;
  }

  .form-group label{
    font-size:14px;
    color:var(--muted);
  }

  .form-group input,
  .form-group textarea{
    padding:12px;
    border-radius:10px;
    border:1px solid #dce4ee;
    font-size:15px;
    outline:none;
    resize:none;
  }

  .submitBtn{
    margin-top:10px;
    background:linear-gradient(180deg,#ffd06a,#ffbf47);
    padding:14px;
    border:none;
    border-radius:12px;
    font-size:16px;
    font-weight:700;
    cursor:pointer;
    width:100%;
    box-shadow:0 8px 18px rgba(255,191,71,0.16);
  }

  /* Contact Info Box */
  .infoBox{
    background:var(--card);
    padding:30px;
    border-radius:var(--radius);
    box-shadow:0 10px 35px rgba(0,0,0,0.06);
    display:flex;
    flex-direction:column;
    gap:24px;
  }

  .infoBox h2{
    font-size:26px;
    margin:0;
    font-family:Merriweather, serif;
    color:var(--accent);
  }

  .infoItem{
    display:flex;
    align-items:flex-start;
    gap:14px;
  }

  .infoItem i{
    font-size:20px;
    color:var(--accent);
    margin-top:4px;
  }

  .infoText{
    font-size:15px;
    line-height:1.6;
  }

  /* Map */
  .mapBox{
    width:100%;
    height:260px;
    border-radius:12px;
    overflow:hidden;
    margin-top:10px;
    border:1px solid #d8e1ed;
  }

  /* Social Icons */
  .socials{
    display:flex;
    gap:14px;
  }
  .socials a{
    width:42px;
    height:42px;
    border-radius:50%;
    background:var(--accent);
    display:flex;
    align-items:center;
    justify-content:center;
    color:#fff;
    font-size:18px;
    text-decoration:none;
    transition:.2s;
  }
  .socials a:hover{
    background:#0b4aa3;
    transform:translateY(-3px);
  }

  /* Responsive */
  @media (max-width:900px){
    .container{grid-template-columns:1fr;}
  }

  /* office  */
  .office-hours{background:#fff;padding:20px;border-radius:12px;margin-top:20px;border:1px solid #e6edf3}
.office-hours h3{margin:0 0 10px;color:#083475;font-weight:700}
.office-hours ul{margin:0;padding-left:20px;color:#444;line-height:1.6}


/* teams */
.team-section{margin-top:22px}
.team-section h3{color:#083475;font-family:Merriweather,serif;margin-bottom:12px}
.team-grid{display:grid;grid-template-columns:1fr 1fr;gap:14px}
.team-card{background:#fff;padding:16px;border-radius:12px;border:1px solid #e6edf3}
.team-card strong{font-size:18px;color:#083475}
.team-card small{display:block;color:#6b7280;margin-bottom:8px}
@media(max-width:600px){.team-grid{grid-template-columns:1fr}}

/*quick-contact  */
.quick-contact{display:flex;gap:12px;margin-top:20px;flex-wrap:wrap}
.qc-btn{
