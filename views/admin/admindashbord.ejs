<% layout('./boilerplate/boilerplate.ejs') %>
<style>
/* ===== Full Display Add Product Form ===== */

.form-box {
  width: 100%;
  min-height: calc(100vh - 60px);
  margin: 0;
  background: #ffffff;
  padding: 30px 40px;
  border-radius: 0;
  box-shadow: none;
}

.form-box h3 {
  margin-bottom: 24px;
  font-size: 24px;
  color: #222;
  letter-spacing: 0.5px;
}

/* form layout */
.form-box form {
  max-width: 1200px;   /* center content */
  margin: auto;
  display: flex;
  flex-direction: column;
  gap: 18px;
}

/* grid inputs */
.form-box .grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
}

/* inputs */
.form-box input,
.form-box textarea,
.form-box select {
  width: 100%;
  padding: 14px 16px;
  border-radius: 10px;
  border: 1px solid #dcdcdc;
  font-size: 15px;
  outline: none;
  background: #fafafa;
  transition: 0.25s ease;
}

.form-box textarea {
  min-height: 130px;
}

/* focus */
.form-box input:focus,
.form-box textarea:focus,
.form-box select:focus {
  border-color: #0b78d1;
  background: #fff;
  box-shadow: 0 0 0 3px rgba(11, 120, 209, 0.15);
}

/* file */
.form-box input[type="file"] {
  background: #fff;
  padding: 10px;
}

/* button */
.form-box button {
  width: 220px;
  padding: 14px;
  border: none;
  border-radius: 12px;
  background: #0b78d1;
  color: #fff;
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  transition: 0.25s ease;
}

.form-box button:hover {
  box-shadow: 0 6px 20px rgba(11, 120, 209, 0.35);
  transform: translateY(-1px);
}

/* ===== Mobile ===== */
@media (max-width: 768px) {
  .form-box {
    padding: 20px;
  }

  .form-box .grid {
    grid-template-columns: 1fr;
  }

  .form-box button {
    width: 100%;
  }
}

</style>
<body>
  <section class="form-box">
  <h3>Add Product</h3>

  <form action="/admin/add" method="POST" enctype="multipart/form-data">

    <div class="grid">
      <input 
        type="text" 
        name="title" 
        placeholder="Product Name" 
        required
      >

      <input 
        type="file" 
        name="image"
      >
    </div>

    <textarea 
      name="description" 
      placeholder="Product Description"
    ></textarea>

    <div class="grid">
      <input 
        type="text" 
        name="height" 
        placeholder="Height"
      >

      <input 
        type="text" 
        name="material" 
        placeholder="Material"
      >
    </div>

    <select name="category" required>
      <option value="">Select Category</option>
      <option value="street-lighting">Street Lighting</option>
      <option value="decorative-poles">Decorative Light Poles</option>
      <option value="custom-poles">Custom Poles</option>
      <option value="bollard">Bollard</option>
      <option value="traffic-poles">Traffic Poles</option>
      <option value="high-mast">High Mast</option>
      <option value="camera-poles">Camera Poles</option>
      <option value="solar-poles">Solar Light Poles</option>
    </select>
    <button type="submit" class="add-btn">Add Product</button>
  </form>
</section>
</body>
