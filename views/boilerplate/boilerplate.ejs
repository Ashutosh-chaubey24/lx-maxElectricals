<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <link rel="icon" type="image/png" href="/image/logo7.png">

  <title>Admin - LX Max Electricals</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
*{
  margin:0;
  padding:0;
  box-sizing:border-box;
  font-family:'Poppins',sans-serif;
}

body{
  background:#f5f7fa;
  display:flex;
}

/* Sidebar */
.ad-sidebar{
  width:240px;
  background:#fff;
  height:100vh;
  padding:20px;
  position:fixed;
  box-shadow:2px 0 10px rgba(0,0,0,.05);
  z-index:1000;
}
.ad-logo{
  display:flex;
  align-items:center;
  gap:10px;
  margin-bottom:30px;
}
.ad-logo span{
  background:#4f7cff;
  color:#fff;
  padding:8px 12px;
  border-radius:10px;
}
.ad-nav a{
  display:block;
  padding:12px;
  margin-bottom:8px;
  color:#333;
  text-decoration:none;
  border-radius:8px;
}
.ad-nav a:hover,
.ad-nav a.ad-active{
  background:#eef2ff;
}
.ad-nav a.ad-danger{
  color:#e63946;
}

/* Main */
.ad-main{
  margin-left:240px;
  width:100%;
  padding:20px;
}

/* Topbar */
.ad-topbar{
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:15px;
}
.ad-menu-btn{
  display:none;
  font-size:22px;
  background:none;
  border:none;
}
.ad-topbar input{
  flex:1;
  padding:10px 15px;
  border-radius:20px;
  border:1px solid #ddd;
}
.ad-avatar{
  width:40px;
  height:40px;
  background:#4f7cff;
  color:#fff;
  display:flex;
  align-items:center;
  justify-content:center;
  border-radius:50%;
}

/* Cards */
.ad-cards{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
  gap:20px;
  margin:30px 0;
}
.ad-card{
  background:#fff;
  padding:25px;
  border-radius:15px;
  box-shadow:0 10px 20px rgba(0,0,0,.05);
}
.ad-card-center{
  display:flex;
  align-items:center;
  justify-content:center;
  position:relative;
  font-size:35px;
}
.ad-badge{
  position:absolute;
  top:15px;
  right:20px;
  background:red;
  color:#fff;
  padding:4px 8px;
  border-radius:50%;
  font-size:12px;
}

/* Mobile */
@media(max-width:768px){
  .ad-sidebar{
    transform: translateX(-100%);
    transition: transform .3s ease;
  }
  .ad-sidebar.ad-show{
    transform: translateX(0);
  }

  .ad-main{
    margin-left:0;
  }

  .ad-menu-btn{
    display:block;
  }
}
.ad-logo-flex{
  display:flex;
  justify-content:space-between;
  align-items:center;
}

.ad-logo-left{
  display:flex;
  align-items:center;
  gap:10px;
}

.ad-close-btn{
  display:none;
  font-size:22px;
  background:none;
  border:none;
  cursor:pointer;
  color:#333;
}

/* Overlay */
.ad-overlay{
  position:fixed;
  inset:0;
  background:rgba(0,0,0,0.4);
  z-index:900;
  display:none;
}

/* Mobile only */
@media(max-width:768px){
  .ad-close-btn{
    display:block;
  }
}

</style>
</head>

<body>

<!-- Sidebar (DEFAULT OPEN ON MOBILE) -->
<aside class="ad-sidebar" id="sidebar">
  <div class="ad-logo">
    <span>AD</span>
    <p>Admin Desk</p>
     <button class="ad-close-btn" onclick="toggleSidebar()">âœ–</button>
  </div>
  <nav class="ad-nav">
    <a href="/admin/dashboard" class="ad-active"><i class="fa-solid fa-gauge"></i> Dashboard</a>
    <a href="/admin/allproducts"><i class="fa-solid fa-box"></i> Products</a>
    <a href="/admin/all-users"><i class="fa-solid fa-users"></i> Users</a>
    <a href="/admin/register"><i class="fa-solid fa-user-shield"></i> Register New Admin</a>
    <a href="/admin/logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
    <a   data-bs-toggle="modal" data-bs-target="#exampleModal" class="ad-danger"><i class="fa-solid fa-user-xmark" ></i> Delete Admin</a>
  </nav>
</aside>

<!-- Main -->
<main class="ad-main">

<header class="ad-topbar">
  <button class="ad-menu-btn" onclick="toggleSidebar()">â˜°</button>
  <input type="search" placeholder="Search products...">
  <div class="ad-avatar">Lx</div>
</header>

<section class="ad-cards">
  <div class="ad-card">
    <h4><i class="fa-solid fa-boxes-stacked"></i>Total Products</h4>
    <h2><%= totalProducts %></h2>
  </div>

  <div class="ad-card ad-card-center">
    ðŸ””
    <span class="ad-badge"><%= unreadCounts %></span>
  </div>

  <div class="ad-card">
    <h4><i class="fa-solid fa-circle text-success"></i>Active Users</h4>
    <h2><%= allUser %></h2>
  </div>

  <div class="ad-card">
    <h4><i class="fa-solid fa-user-check"></i>Authorized Admin</h4>
    <h2><%= alladmin%></h2>
  </div>
</section>

<!-- Dynamic page -->
<%- body %>

</main>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       <form action="/admin/deleteadmin?_method=DELETE" method="post">
        <input type="text" name="username" class="form-control" placeholder="Enter Admin Name">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>
<!-- JS (ALL SET) -->
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
<script>
function toggleSidebar(){
  const sidebar = document.getElementById("sidebar");
  sidebar.classList.toggle("ad-show");

  document.body.style.overflow =
    sidebar.classList.contains("ad-show") ? "hidden" : "auto";
}
</script>
</body>
</html>
